<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CrudMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CrudMaui"
    Shell.FlyoutBehavior="Disabled"
    xmlns:pages="clr-namespace:CrudMaui.Views"
    Title="CrudMaui">

    <!--<ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />-->
    <ShellContent
        Title="Productos"
        ContentTemplate="{DataTemplate pages:OnboardingPage}"
        Route="ProductosPage" />
    <TabBar>
        <Tab Title="Home" Icon="home">
            <ShellContent ContentTemplate="{DataTemplate pages:OnboardingPage}" />
        </Tab>
        <Tab Title="Productos" Icon="productos">
            <ShellContent ContentTemplate="{DataTemplate pages:ProductosPage}" />
        </Tab>
    </TabBar>

</Shell>
